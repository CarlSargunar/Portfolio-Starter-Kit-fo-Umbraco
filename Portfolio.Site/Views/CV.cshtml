@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.CV>
@using Portfolio.Core.Models.ViewModels

@{
    Layout = "Master.cshtml";
    var homePage = Model.AncestorOrSelf<ContentModels.Home>();
}

<main class="page cv-page">
    @(await Component.InvokeAsync("AvatarHeader", new { profileControls = homePage, borderBottom = false } ))
    <section class="portfolio-block cv">
        <div class="container">
            @await Component.InvokeAsync("WorkHistory", Model)
            @await Component.InvokeAsync("EducationHistory", Model)
            <div class="group">
                <div class="row">
                    <div class="col-md-6">
                        @await Component.InvokeAsync("Skills", Model)
                    </div>
                    <div class="col-md-6">
                        @await Component.InvokeAsync("ContactInfo", Model)
                    </div>
                </div>
            </div>
            @(await Component.InvokeAsync("Hobbies", Model))
        </div>
    </section>
</main>