@inherits UmbracoViewPage<AvatarHeaderViewModel>
@using Portfolio.Core.Models.ViewModels

<section class="portfolio-block block-intro @(Model.BorderBottom ? "border-bottom" : null)">
    <div class="container">
        <div class="avatar" style="background-image:url('@(Model.Avatar.GetCropUrl("Avatar"))');"></div>
        <div class="about-me">
            @Model.AboutMe
            @if(Model.ProfileLink != null && !string.IsNullOrWhiteSpace(Model.ProfileLink.Url))
            {
                <a class="btn btn-outline-primary" role="button" target="@Model.ProfileLink.Target" href="@Model.ProfileLink.Url">@Model.ProfileLink.Name</a>
            }
        </div>
    </div>
</section>