@inherits UmbracoViewPage<IEnumerable<ContentModels.Project>>
@using Portfolio.Core.Extensions

@if (Model != null && Model.Any())
{
    <section class="portfolio-block photography">
        <div class="container">
            <div class="row no-gutters">
                @foreach (var project in Model)
                {
                    <div class="col-md-6 col-lg-4 item zoom-on-hover">
                        <a href="@project.Url()">
                            <img class="img-fluid image" src="@project.MainImage.Url()" alt="@project.MainImage.GetAltText()">
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}