@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ProjectList>

@{
    Layout = "Master.cshtml";
    var projects = Model.Children<ContentModels.Project>();
}

<main class="page projets-page">
    <section class="portfolio-block projects compact-grid">
        <div class="heading">
            <h2>@Model.Title</h2>
        </div>
        @if (projects != null && projects.Any())
        {
            <div class="row no-gutters">
                @foreach(var project in projects)
                {
                    <div class="col-md-6 col-lg-4 item zoom-on-hover">
                        <a href="@project.Url()">
                            <img class="img-fluid image" src="@project.MainImage.Url()">
                            <span class="description">
                                <span class="description-heading">@project.Name</span>
                                <span class="description-body">@project.Description</span>
                            </span>
                        </a>
                    </div>
                }
            </div>
        }
    </section>
</main>